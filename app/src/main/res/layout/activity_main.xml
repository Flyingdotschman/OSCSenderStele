<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24760602" />

    <Button
        android:id="@+id/button_connect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_mp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="MAX +"
        app:layout_constraintBottom_toTopOf="@+id/button_mm"
        app:layout_constraintEnd_toStartOf="@+id/button_ip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_connect" />

    <Button
        android:id="@+id/button_ip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="INSIDE +"
        app:layout_constraintBottom_toTopOf="@+id/button_im"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_mp"
        app:layout_constraintTop_toBottomOf="@+id/button_connect" />

    <Button
        android:id="@+id/button_mm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="MAX -"
        app:layout_constraintBottom_toTopOf="@+id/button_rm"
        app:layout_constraintEnd_toStartOf="@+id/button_im"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mp" />

    <Button
        android:id="@+id/button_im"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="INSIDE -"
        app:layout_constraintBottom_toTopOf="@+id/button_ri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_mm"
        app:layout_constraintTop_toBottomOf="@+id/button_ip" />

    <Button
        android:id="@+id/button_rm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="RESET MAX"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_ri"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mm" />

    <Button
        android:id="@+id/button_ri"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="RESET INSIDE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_rm"
        app:layout_constraintTop_toBottomOf="@+id/button_im" />

</androidx.constraintlayout.widget.ConstraintLayout>